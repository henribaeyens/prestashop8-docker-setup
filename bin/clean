#!/bin/bash

set -e
DIR=$(dirname "$(realpath "$BASH_SOURCE")")
source "$DIR/.common"
cd "$DIR/.."

ADMIN="admin"
ADMIN_DEV="admin-dev"
INSTALL="install"
LOCK="install.lock"
SETTINGS="config/settings.inc.php"

if [ -e $ADMIN_DEV -a -d $ADMIN_DEV ]
    then
        cmd rm -Rf $ADMIN_DEV
fi

if [ -e $ADMIN -a -d $ADMIN ]
    then
        cmd rm -Rf $ADMIN
fi

if [ -e $SETTINGS -a -f $SETTINGS ]
    then
        cmd rm $SETTINGS
fi

if [ -e $INSTALL -a -d $INSTALL ]
    then
        cmd rm -Rf $INSTALL
fi

if [ -e $LOCK -a -f $LOCK ]
    then
        cmd rm $LOCK
fi

cmd docker compose -f docker-compose.yml stop
cmd docker compose -f docker-compose.yml rm -v -f
cmd docker volume rm prestashop-database-data
cmd docker volume rm prestashop-mailpit-data