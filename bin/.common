#!/bin/sh

_echo() {
	args="-e"
	color=$1
	shift

	if [ "$1" = "-n" ]; then
	  shift
	  printf "%b" "$color$*\033[0m"
  else
	    printf "%b\n" "$color$*\033[0m"
	fi

}

load_env() {
	if [ -f .env ]; then
	  set +e
		while read -r line; do
			eval "$line" 2>/dev/null
		done < .env
		set -e
	fi
}

info() {
	_echo "\033[36m" $@
}

title() {
  args=$*
	length=$(( ${#args} + 1 ))

	echo
	_echo "\033[32m" "$@"
	_echo "\033[32m" "$(seq -s- $length | tr -d '[:digit:]')"
	echo
}

echo_cmd() {
	_echo "\033[36m" "$@"
}

cmd() {
	echo_cmd "$@"
	eval "$@"
}

success() {
	_echo "\033[32m" "$@"
}

error() {
	_echo "\033[31m" "$@"
}
