#!/bin/bash

set -e
DIR=$(dirname "$(realpath "$BASH_SOURCE")")
source "$DIR/.common"
cd "$DIR/.."

usage() {
    echo "Red√©marre les containers."
    echo
    echo "Usage: $0"
}

while [ $# -gt 0 ] && [ "$ARGS" == "" ]; do
    case $1 in
        -h|--help)
            usage
            exit
            ;;
        *)
            ARGS="$@"
            ;;
    esac
    shift
done

bin/stop
bin/start
